<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_paly_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/id_paly_list_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_paly_list_pic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_test_4" />

        <ImageView
            android:id="@+id/id_paly_list_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/vp" />

        <ImageView
            android:id="@+id/id_paly_list_hight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/hight_img" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_paly_list_pic"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/id_paly_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="这是描述"
                android:textSize="10dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/id_paly_list_hightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="高清"
                android:background="@color/colorAccent"
                android:textSize="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>