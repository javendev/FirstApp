<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/bg_white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/id_vip_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/id_vip_pic"
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_test_4" />

            <ImageView
                android:id="@+id/id_vip_vp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/vp" />
            <ImageView
                android:id="@+id/id_vip_hight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/hight_img" />
        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>