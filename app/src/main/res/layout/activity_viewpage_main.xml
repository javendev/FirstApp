<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_topbar">

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/text_topbar"
            android:text="信息"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/div_white"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        />

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white"
        />

    <RadioGroup
        android:id="@+id/main_tab_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/tab_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_channel"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/tab_viewpage_menu_text"
            android:textSize="16sp"
            android:drawableTop="@drawable/tab_viewpage_menu_channel"
            android:text="消息"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/radio_message"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/tab_viewpage_menu_text"
            android:textSize="16sp"

            android:drawableTop="@drawable/tab_viewpage_menu_message"
            android:text="信息"
            />

        <RadioButton
            android:id="@+id/radio_better"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/tab_viewpage_menu_text"
            android:textSize="16sp"

            android:drawableTop="@drawable/tab_viewpage_menu_better"
            android:text="我的"
            />
        <RadioButton
            android:id="@+id/radio_setting"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/tab_viewpage_menu_text"
            android:textSize="16sp"

            android:drawableTop="@drawable/tab_viewpage_menu_setting"
            android:text="设置"

            />
    </RadioGroup>


</LinearLayout>